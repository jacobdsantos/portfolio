---
/**
 * Theme toggle button — switches between dark (default) and light mode.
 * Persists choice to localStorage, respects system preference on first visit.
 * FOUC prevention handled by inline script in AppShell <head>.
 */
---

<button
  id="theme-toggle"
  class="relative flex items-center justify-center w-9 h-9 rounded-xl text-text-muted hover:text-text-primary transition-all duration-200 hover:bg-white/[0.04] border border-transparent hover:border-white/[0.06]"
  aria-label="Toggle theme"
  title="Toggle light/dark mode"
>
  <!-- Sun icon (shown in dark mode → click to go light) -->
  <svg
    class="theme-icon-sun w-[18px] h-[18px] transition-all duration-300"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
    stroke-width="1.5"
  >
    <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" />
  </svg>
  <!-- Moon icon (shown in light mode → click to go dark) -->
  <svg
    class="theme-icon-moon w-[18px] h-[18px] hidden transition-all duration-300"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
    stroke-width="1.5"
  >
    <path stroke-linecap="round" stroke-linejoin="round" d="M21.752 15.002A9.718 9.718 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 003 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 009.002-5.998z" />
  </svg>
</button>

<style>
  [data-theme="light"] .theme-icon-sun {
    display: none;
  }
  [data-theme="light"] .theme-icon-moon {
    display: block;
  }
  /* Light mode button hover adjustments */
  [data-theme="light"] #theme-toggle:hover {
    background: rgba(0, 0, 0, 0.04);
    border-color: rgba(0, 0, 0, 0.06);
  }
</style>

<script>
  const toggle = document.getElementById('theme-toggle');

  function setTheme(theme: string) {
    document.documentElement.setAttribute('data-theme', theme);
    localStorage.setItem('theme', theme);

    // Update meta theme-color for mobile browsers
    const meta = document.querySelector('meta[name="theme-color"]');
    if (meta) {
      meta.setAttribute('content', theme === 'light' ? '#f9fafb' : '#08090e');
    }
  }

  toggle?.addEventListener('click', () => {
    const current = document.documentElement.getAttribute('data-theme') || 'dark';
    setTheme(current === 'dark' ? 'light' : 'dark');
  });
</script>

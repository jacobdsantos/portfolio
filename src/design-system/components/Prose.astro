---
/**
 * Prose wrapper for long-form / MDX content.
 * Applies typographic rhythm, heading styles, list formatting, code block
 * styling, and link treatments consistent with the site's design tokens.
 *
 * Usage:
 *   <Prose><slot /></Prose>
 */

interface Props {
  /** Additional CSS classes on the outer wrapper. */
  class?: string;
}

const { class: className } = Astro.props;
---

<div class:list={['prose-wrapper', className]}>
  <slot />
</div>

<style>
  .prose-wrapper {
    font-family: 'Urbanist', system-ui, sans-serif;
    color: rgb(var(--color-text-secondary));
    line-height: 1.75;
    max-width: 72ch;
  }

  /* ---- Headings ---- */
  .prose-wrapper :global(h1) {
    font-size: 2.25rem;
    font-weight: 700;
    letter-spacing: -0.02em;
    margin-top: 0;
    margin-bottom: 1rem;
    color: rgb(var(--color-text-primary));
  }
  .prose-wrapper :global(h2) {
    font-size: 1.5rem;
    font-weight: 700;
    letter-spacing: -0.01em;
    margin-top: 2.5rem;
    margin-bottom: 0.75rem;
    color: rgb(var(--color-text-primary));
    border-bottom: 1px solid var(--glass-border);
    padding-bottom: 0.5rem;
  }
  .prose-wrapper :global(h3) {
    font-size: 1.25rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 0.5rem;
    color: rgb(var(--color-text-primary));
  }
  .prose-wrapper :global(h4) {
    font-size: 1.125rem;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
    color: rgb(var(--color-text-secondary));
  }

  /* ---- Paragraphs ---- */
  .prose-wrapper :global(p) {
    margin-top: 0;
    margin-bottom: 1.25rem;
    color: rgb(var(--color-text-secondary));
  }

  /* ---- Links ---- */
  .prose-wrapper :global(a) {
    color: rgb(var(--color-accent-primary));
    text-decoration: underline;
    text-underline-offset: 2px;
    text-decoration-color: rgb(var(--color-accent-primary) / 0.3);
    transition: color 200ms, text-decoration-color 200ms;
  }
  .prose-wrapper :global(a:hover) {
    color: rgb(var(--color-accent-tertiary));
    text-decoration-color: rgb(var(--color-accent-primary));
  }

  /* ---- Lists ---- */
  .prose-wrapper :global(ul) {
    list-style: disc;
    padding-left: 1.5rem;
    margin-bottom: 1.25rem;
    color: rgb(var(--color-text-secondary));
  }
  .prose-wrapper :global(ol) {
    list-style: decimal;
    padding-left: 1.5rem;
    margin-bottom: 1.25rem;
    color: rgb(var(--color-text-secondary));
  }
  .prose-wrapper :global(li) {
    margin-bottom: 0.375rem;
  }
  .prose-wrapper :global(li::marker) {
    color: rgb(var(--color-text-muted));
  }

  /* ---- Inline code ---- */
  .prose-wrapper :global(code) {
    font-family: 'JetBrains Mono', 'Fira Code', monospace;
    font-size: 0.85em;
    background: rgb(var(--color-bg-surface));
    border: 1px solid var(--glass-border);
    border-radius: 0.375rem;
    padding: 0.15em 0.4em;
    color: rgb(var(--color-accent-tertiary));
  }

  /* ---- Code blocks (pre > code) ---- */
  .prose-wrapper :global(pre) {
    background: rgb(var(--color-bg-secondary));
    border: 1px solid var(--glass-border);
    border-radius: 0.75rem;
    padding: 1.25rem 1.5rem;
    margin-bottom: 1.5rem;
    overflow-x: auto;
    font-size: 0.875rem;
    line-height: 1.6;
  }
  .prose-wrapper :global(pre code) {
    background: none;
    border: none;
    padding: 0;
    font-size: inherit;
    color: rgb(var(--color-text-primary));
  }

  /* ---- Blockquotes ---- */
  .prose-wrapper :global(blockquote) {
    border-left: 3px solid rgb(var(--color-accent-primary));
    padding: 0.5rem 1rem;
    margin: 1.5rem 0;
    background: rgb(var(--color-accent-primary) / 0.04);
    border-radius: 0 0.5rem 0.5rem 0;
    color: rgb(var(--color-text-secondary));
    font-style: italic;
  }

  /* ---- Horizontal rule ---- */
  .prose-wrapper :global(hr) {
    border: none;
    border-top: 1px solid var(--glass-border);
    margin: 2rem 0;
  }

  /* ---- Tables ---- */
  .prose-wrapper :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 1.5rem;
    font-size: 0.875rem;
  }
  .prose-wrapper :global(th) {
    text-align: left;
    padding: 0.75rem 1rem;
    font-weight: 600;
    color: rgb(var(--color-text-primary));
    border-bottom: 1px solid var(--glass-border-hover);
    background: rgb(var(--color-bg-surface) / 0.5);
  }
  .prose-wrapper :global(td) {
    padding: 0.625rem 1rem;
    border-bottom: 1px solid var(--glass-border);
    color: rgb(var(--color-text-secondary));
  }
  .prose-wrapper :global(tr:hover td) {
    background: rgb(var(--color-bg-hover) / 0.4);
  }

  /* ---- Images ---- */
  .prose-wrapper :global(img) {
    border-radius: 0.75rem;
    border: 1px solid var(--glass-border);
    margin: 1.5rem 0;
    max-width: 100%;
    height: auto;
  }

  /* ---- Strong / em ---- */
  .prose-wrapper :global(strong) {
    color: rgb(var(--color-text-primary));
    font-weight: 600;
  }
  .prose-wrapper :global(em) {
    font-style: italic;
  }
</style>

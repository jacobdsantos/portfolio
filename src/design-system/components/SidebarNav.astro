const stats = [
  { value: '31', label: 'Published' },
  { value: '10+', label: 'Talks' },
  { value: '10+', label: 'Tools' },
];
---

<div class="sidebar-card">
  <!-- Avatar & identity -->
  <div class="text-center mb-5">
    <div class="relative w-32 h-32 mx-auto mb-4">
      <!-- Subtle outer glow -->
      <div class="absolute -inset-1 rounded-2xl bg-gradient-to-br from-accent-primary/15 via-accent-secondary/10 to-accent-tertiary/15 blur-sm"></div>
      <!-- Photo -->
      <img
        src="/images/profile.jpg"
        alt="Jacob Santos"
        class="relative w-full h-full object-cover object-top rounded-2xl border border-white/[0.08]"
        loading="eager"
      />
    </div>
    <h2 class="text-xl font-semibold text-text-primary tracking-tight font-display">
      <a href="/" class="hover:text-accent-primary transition-colors">Jacob Santos</a>
    </h2>
    <p class="text-text-muted text-[11px] mt-1.5 leading-relaxed max-w-[220px] mx-auto">Threat researcher. Tool builder.<br/>Intelligence dissemination.</p>
    <div class="inline-flex items-center gap-2 mt-3 px-3.5 py-1.5 rounded-lg bg-accent-primary/[0.06] border border-accent-primary/10 text-xs font-mono text-accent-primary">
      <span class="relative flex h-1.5 w-1.5">
        <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-accent-primary opacity-75"></span>
        <span class="relative inline-flex rounded-full h-1.5 w-1.5 bg-accent-primary"></span>
      </span>
      Sr. Threat Researcher
    </div>
  </div>

  <div class="sep"></div>

  <!-- Contact info -->
  <div class="space-y-3.5">
    {contacts.map(contact => (
      <div class="info-row">
        <div class="info-icon" set:html={contact.icon} />
        <div class="min-w-0">
          <p class="text-text-muted text-[10px] uppercase tracking-widest font-mono">{contact.label}</p>
          {contact.href ? (
            <a href={contact.href} target={contact.href.startsWith('http') ? '_blank' : undefined} rel={contact.href.startsWith('http') ? 'noopener' : undefined}
              class="text-text-secondary text-xs hover:text-accent-primary transition-colors truncate block">
              {contact.value}
            </a>
          ) : (
            <p class="text-text-secondary text-xs">{contact.value}</p>
          )}
        </div>
      </div>
    ))}
  </div>

  <div class="sep"></div>

  <!-- Quick stats -->
  <div class="grid grid-cols-3 gap-2">
    {stats.map(stat => (
      <div class="text-center py-2.5 rounded-xl bg-bg-surface/60 border border-white/[0.04]">
        <div class="text-lg font-bold text-accent-primary font-mono">{stat.value}</div>
        <div class="text-text-muted text-[9px] uppercase tracking-widest mt-0.5">{stat.label}</div>
      </div>
    ))}
  </div>

  <div class="sep"></div>

  <!-- Specializations -->
  <div>
    <h3 class="text-text-muted text-[9px] uppercase tracking-widest font-mono mb-3">Specializations</h3>
    <div class="flex flex-wrap gap-1.5">
      <span class="tag-red">Ransomware Analysis</span>
      <span class="tag-purple">APT Tracking</span>
      <span class="tag-green">Threat Hunting</span>
      <span class="tag-amber">Defense Evasion</span>
      <span class="tag-cyan">Security Automation</span>
      <span class="tag-purple">Malware Analysis</span>
    </div>
  </div>

  <div class="sep"></div>

  <!-- View Resume CTA -->
  <a href="/resume" target="_blank" rel="noopener"
    class="flex items-center justify-center gap-2 w-full py-2.5 rounded-xl bg-accent-primary/[0.08] border border-accent-primary/15 text-accent-primary text-xs font-medium hover:bg-accent-primary/15 hover:border-accent-primary/25 transition-all group">
    <svg class="w-3.5 h-3.5 transition-transform group-hover:-translate-y-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m2.25 0H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
    </svg>
    View Resume
  </a>
</div>

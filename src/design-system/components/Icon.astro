---
/**
 * Inline SVG icon component.
 * Maps well-known icon names to hand-crafted SVG markup so there is zero
 * runtime JS and no external icon-font dependency.
 *
 * Usage:
 *   <Icon name="github" class="w-5 h-5" />
 *   <Icon name="arrow-right" />
 */

interface Props {
  /** Icon identifier. See `icons` map for available names. */
  name: string;
  /** Additional CSS classes (e.g. `w-5 h-5 text-accent-primary`). */
  class?: string;
}

const { name, class: className = 'w-4 h-4' } = Astro.props;

/* All icons use a 24x24 viewBox, stroke-based where possible. */
const icons: Record<string, string> = {
  'arrow-left':

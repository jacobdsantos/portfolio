const svgContent = icons[name] ?? '';

/* Determine stroke vs fill. GitHub and LinkedIn use fill; the rest use stroke. */
const useFill = ['github', 'linkedin'].includes(name);
---

{svgContent ? (
  <svg
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 24 24"
    fill={useFill ? 'currentColor' : 'none'}
    stroke={useFill ? 'none' : 'currentColor'}
    class={className}
    aria-hidden="true"
    set:html={svgContent}
  />
) : (
  <span class={className} aria-hidden="true" />
)}

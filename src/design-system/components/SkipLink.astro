---
/**
 * Accessible skip-to-content link.
 * Visually hidden until it receives keyboard focus, then slides into view
 * at the top of the viewport so keyboard / screen-reader users can bypass
 * repetitive navigation.
 *
 * Usage:
 *   <SkipLink />
 *   <!-- or with a custom target -->
 *   <SkipLink target="#main-content" label="Skip to main content" />
 */

interface Props {
  /** The id of the element to jump to (include the `#`). Defaults to `#main-content`. */
  target?: string;
  /** Visible label text. Defaults to `Skip to content`. */
  label?: string;
}

const { target = '#main-content', label = 'Skip to content' } = Astro.props;
---

<a
  href={target}
  class="skip-link"
>
  {label}
</a>

<style>
  .skip-link {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 100;
    padding: 0.75rem 1.25rem;
    font-family: 'Space Grotesk', system-ui, sans-serif;
    font-size: 0.875rem;
    font-weight: 600;
    color: #07090f;
    background-color: #f0a63a;
    border-bottom-right-radius: 0.5rem;
    text-decoration: none;
    transform: translateY(-100%);
    transition: transform 150ms ease-in-out;
    outline: none;
  }

  .skip-link:focus {
    transform: translateY(0);
  }
</style>

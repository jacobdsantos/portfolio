  {
    icon: `<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"/></svg>`,
    label: 'Email',
    value: 'jacobsantos.d@gmail.com',
    href: 'mailto:jacobsantos.d@gmail.com',
  },
  {
    icon: `<svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/></svg>`,
    label: 'GitHub',
    value: 'jacobdsantos',
    href: 'https://github.com/jacobdsantos',
  },
  {
    icon: `<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z"/></svg>`,
    label: 'Location',
    value: 'Philippines',
    href: null,
  },
];

const stats = [
  { value: '31', label: 'Published' },
  { value: '10+', label: 'Talks' },
  { value: '10+', label: 'Tools' },
];
---

<div class="sidebar-card">
  <!-- Avatar & identity -->
  <div class="text-center mb-5">
    <div class="relative w-24 h-24 mx-auto mb-4">
      <div class="absolute inset-0 rounded-2xl bg-gradient-to-br from-accent-primary/30 via-accent-secondary/20 to-accent-danger/20 animate-glow"></div>
      <div class="relative w-full h-full rounded-2xl bg-bg-secondary border border-accent-primary/20 flex items-center justify-center overflow-hidden group">
        <span class="text-3xl font-bold bg-gradient-to-br from-accent-primary via-accent-tertiary to-accent-secondary bg-clip-text text-transparent font-mono tracking-tighter">JS</span>
        <!-- Scanline effect -->
        <div class="absolute inset-0 bg-gradient-to-b from-transparent via-accent-primary/[0.03] to-transparent h-8 animate-float pointer-events-none"></div>
      </div>
    </div>
    <h1 class="text-xl font-bold text-text-primary tracking-tight">Jacob Santos</h1>
    <div class="inline-flex items-center gap-2 mt-2.5 px-3.5 py-1.5 rounded-lg bg-accent-primary/[0.06] border border-accent-primary/10 text-xs font-mono text-accent-primary">
      <span class="relative flex h-1.5 w-1.5">
        <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-accent-primary opacity-75"></span>
        <span class="relative inline-flex rounded-full h-1.5 w-1.5 bg-accent-primary"></span>
      </span>
      Sr. Threat Researcher
    </div>
  </div>

  <div class="sep"></div>

  <!-- Contact info -->
  <div class="space-y-3.5">
    {contacts.map(contact => (
      <div class="info-row">
        <div class="info-icon" set:html={contact.icon} />
        <div class="min-w-0">
          <p class="text-text-muted text-[10px] uppercase tracking-widest font-mono">{contact.label}</p>
          {contact.href ? (
            <a href={contact.href} target={contact.href.startsWith('http') ? '_blank' : undefined} rel={contact.href.startsWith('http') ? 'noopener' : undefined}
              class="text-text-secondary text-xs hover:text-accent-primary transition-colors truncate block">
              {contact.value}
            </a>
          ) : (
            <p class="text-text-secondary text-xs">{contact.value}</p>
          )}
        </div>
      </div>
    ))}
  </div>

  <div class="sep"></div>

  <!-- Quick stats -->
  <div class="grid grid-cols-3 gap-2">
    {stats.map(stat => (
      <div class="text-center py-2.5 rounded-xl bg-bg-surface/60 border border-white/[0.04]">
        <div class="text-lg font-bold text-accent-primary font-mono">{stat.value}</div>
        <div class="text-text-muted text-[9px] uppercase tracking-widest mt-0.5">{stat.label}</div>
      </div>
    ))}
  </div>

  <div class="sep"></div>

  <!-- Specializations -->
  <div>
    <h3 class="text-text-muted text-[9px] uppercase tracking-widest font-mono mb-3">Specializations</h3>
    <div class="flex flex-wrap gap-1.5">
      <span class="tag-red">Ransomware</span>
      <span class="tag-purple">APT Tracking</span>
      <span class="tag-green">Threat Hunting</span>
      <span class="tag-amber">BYOVD</span>
      <span class="tag-cyan">Automation</span>
      <span class="tag-purple">MITRE ATT&CK</span>
    </div>
  </div>

  <div class="sep"></div>

  <!-- Organization -->
  <div class="flex items-center gap-3">
    <div class="w-9 h-9 rounded-xl bg-accent-danger/[0.06] border border-accent-danger/10 flex items-center justify-center shrink-0">
      <svg class="w-4 h-4 text-accent-danger" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 21v-8.25M15.75 21v-8.25M8.25 21v-8.25M3 9l9-6 9 6m-1.5 12V10.332A48.36 48.36 0 0012 9.75c-2.551 0-5.056.2-7.5.582V21M3 21h18M12 6.75h.008v.008H12V6.75z"/></svg>
    </div>
    <div class="min-w-0">
      <p class="text-text-muted text-[10px] uppercase tracking-widest font-mono">Organization</p>
      <p class="text-text-secondary text-xs font-medium">Trend Micro &middot; PH THT</p>
    </div>
  </div>
</div>

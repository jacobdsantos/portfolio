---
const links = [
  { href: '#research', label: 'Research' },
  { href: '#tools', label: 'Tools' },
  { href: '#speaking', label: 'Speaking' },
  { href: '#about', label: 'About' },
];
---

<nav class="fixed top-0 w-full z-50 bg-bg-primary/80 backdrop-blur-xl border-b border-white/5">
  <div class="max-w-6xl mx-auto px-6 h-14 flex items-center justify-between">
    <a href="/" class="flex items-center gap-2 group">
      <div class="w-8 h-8 rounded bg-accent-primary/10 border border-accent-primary/30 flex items-center justify-center text-accent-primary font-mono text-sm font-bold group-hover:bg-accent-primary/20 transition-colors">
        JS
      </div>
      <span class="text-text-primary font-medium text-sm hidden sm:block">Jacob Santos</span>
    </a>

    <div class="flex items-center gap-1">
      {links.map(link => (
        <a
          href={link.href}
          class="px-3 py-1.5 text-sm text-text-secondary hover:text-text-primary hover:bg-white/5 rounded transition-colors"
        >
          {link.label}
        </a>
      ))}
      <a
        href="https://github.com/jacobdsantos"
        target="_blank"
        rel="noopener"
        class="ml-2 px-3 py-1.5 text-sm text-text-muted hover:text-text-primary transition-colors"
        aria-label="GitHub"

const statusColors: Record<string, string> = {
  'Production': 'text-accent-success',
  'Active Development': 'text-accent-warning',
};
---

<section id="tools" class="relative py-20 px-6">
  <div class="max-w-6xl mx-auto">
    <div class="flex items-center gap-3 mb-2">
      <div class="w-1 h-6 bg-accent-secondary rounded-full"></div>
      <h2 class="section-heading">Tools & Automation</h2>
    </div>
    <p class="section-subheading">
      I build tools that multiply team capability. These are production systems used daily by our threat hunting team
      <span class="text-text-muted">â€” not side projects, operational infrastructure.</span>
    </p>

    <div class="grid md:grid-cols-2 gap-4">
      {tools.map(tool => (
        <div class="card">
          <div class="flex items-start justify-between mb-3">
            <div class="flex items-center gap-3">
              <div class="w-9 h-9 rounded bg-accent-primary/10 border border-accent-primary/20 flex items-center justify-center text-accent-primary" set:html={tool.icon} />
              <div>
                <h3 class="text-text-primary font-medium">{tool.name}</h3>
                <p class="text-text-muted text-xs">{tool.fullName}</p>
              </div>
            </div>
            <span class={`text-xs font-mono ${statusColors[tool.status]}`}>{tool.status}</span>
          </div>

          <p class="text-text-secondary text-sm leading-relaxed mb-3">{tool.description}</p>

          <div class="flex items-center gap-2 mb-3 text-xs">
            <svg class="w-3.5 h-3.5 text-accent-success shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
            </svg>
            <span class="text-text-secondary">{tool.impact}</span>
          </div>

          <div class="flex flex-wrap gap-1.5">
            {tool.tech.map(t => (
              <span class="tag-cyan">{t}</span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

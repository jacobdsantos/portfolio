---
import { getCollection } from 'astro:content';

const allTools = await getCollection('tools');
const tools = allTools
  .sort((a, b) => (a.data.order ?? 99) - (b.data.order ?? 99))
  .map(entry => entry.data);

const statusConfig: Record<string, { color: string; dot: string }> = {
  'Production': { color: 'text-accent-primary', dot: 'bg-accent-primary' },
  'Active Dev': { color: 'text-accent-warning', dot: 'bg-accent-warning' },
  'Planned': { color: 'text-text-muted', dot: 'bg-text-muted' },
};

// Each tool gets a unique accent color scheme
const toolAccents = [
  { bg: 'bg-accent-primary/10', border: 'border-accent-primary/20', text: 'text-accent-primary' },
  { bg: 'bg-violet-500/10', border: 'border-violet-500/20', text: 'text-violet-400' },
  { bg: 'bg-rose-500/10', border: 'border-rose-500/20', text: 'text-rose-400' },
  { bg: 'bg-cyan-500/10', border: 'border-cyan-500/20', text: 'text-cyan-400' },
  { bg: 'bg-amber-500/10', border: 'border-amber-500/20', text: 'text-amber-400' },
  { bg: 'bg-emerald-500/10', border: 'border-emerald-500/20', text: 'text-emerald-400' },
];

const toolIcons: Record<string, string> = {
  'TITAs': `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3.75 12h16.5m-16.5 3.75h16.5M3.75 19.5h16.5M5.625 4.5h12.75a1.875 1.875 0 010 3.75H5.625a1.875 1.875 0 010-3.75z"/></svg>`,
  'Skadi': `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09z"/></svg>`,
  'SPOT Report Engine': `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m2.25 0H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z"/></svg>`,
  'Confluence Tools Suite': `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11.42 15.17l-5.63 3.29a.75.75 0 01-1.1-.66V5.65a.75.75 0 011.1-.66l5.63 3.29m0 0l5.63-3.29a.75.75 0 011.1.66v12.15a.75.75 0 01-1.1.66l-5.63-3.29m0 0V3.75m0 11.42V20.25"/></svg>`,
  'OpenCTI MCP Server': `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7.5 21L3 16.5m0 0L7.5 12M3 16.5h13.5m0-13.5L21 7.5m0 0L16.5 12M21 7.5H7.5"/></svg>`,
  'Claude Code Desktop': `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6.75 7.5l3 2.25-3 2.25m4.5 0h3m-9 8.25h13.5A2.25 2.25 0 0021 18V6a2.25 2.25 0 00-2.25-2.25H5.25A2.25 2.25 0 003 6v12a2.25 2.25 0 002.25 2.25z"/></svg>`,
  'Obsidian MCP': `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 016 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25"/></svg>`,
  'ImageGen MCP': `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909M2.25 18V6a2.25 2.25 0 012.25-2.25h15A2.25 2.25 0 0121.75 6v12A2.25 2.25 0 0119.5 20.25h-15A2.25 2.25 0 012.25 18z"/></svg>`,
};

const defaultIcon = `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11.42 15.17l-5.63 3.29a.75.75 0 01-1.1-.66V5.65a.75.75 0 011.1-.66l5.63 3.29"/></svg>`;
---

<div class="content-card">
  <h2 class="section-title">Tools & Automation</h2>
  <p class="section-subtitle">
    Production systems used daily by our threat hunting team
    <span class="text-text-muted">â€” not side projects, operational infrastructure.</span>
  </p>

  <div class="grid sm:grid-cols-2 gap-3">
    {tools.map((tool, idx) => {
      const accent = toolAccents[idx % toolAccents.length];
      const status = statusConfig[tool.status] || statusConfig['Planned'];
      return (
        <div class="card !p-4 group">
          <div class="flex items-start justify-between mb-3">
            <div class="flex items-center gap-2.5">
              <div class={`w-9 h-9 rounded-xl ${accent.bg} border ${accent.border} flex items-center justify-center ${accent.text} shrink-0 transition-transform duration-300 group-hover:scale-110`} set:html={toolIcons[tool.name] || defaultIcon} />
              <div>
                <h3 class="text-text-primary font-semibold text-sm">{tool.name}</h3>
                <p class="text-text-muted text-[10px] font-mono">{tool.fullName}</p>
              </div>
            </div>
            <span class={`inline-flex items-center gap-1.5 text-[10px] font-mono ${status.color}`}>
              <span class={`w-1.5 h-1.5 rounded-full ${status.dot}`}></span>
              {tool.status}
            </span>
          </div>

          <p class="text-text-muted text-xs leading-relaxed mb-3">{tool.description}</p>

          <div class="flex items-center gap-1.5 mb-3 px-2.5 py-1.5 rounded-lg bg-accent-primary/[0.04] border border-accent-primary/[0.06]">
            <svg class="w-3 h-3 text-accent-primary shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
            </svg>
            <span class="text-text-secondary text-[10px]">{tool.impact}</span>
          </div>

          <div class="flex flex-wrap gap-1">
            {tool.tech.map(t => (
              <span class="tag-cyan !text-[8px]">{t}</span>
            ))}
          </div>
        </div>
      );
    })}
  </div>

  <!-- Tech Stack -->
  <div class="mt-6 rounded-xl bg-bg-secondary/50 border border-white/[0.06] p-5 mb-4">
    <div class="flex items-center gap-2 mb-3">
      <svg class="w-4 h-4 text-accent-tertiary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6.429 9.75L2.25 12l4.179 2.25m0-4.5l5.571 3 5.571-3m-11.142 0L2.25 7.5 12 2.25l9.75 5.25-4.179 2.25m0 0L12 12.75 6.429 9.75m11.142 0l4.179 2.25L12 17.25 2.25 12l4.179-2.25" />
      </svg>
      <span class="text-text-primary text-xs font-semibold">Tech Stack</span>
    </div>
    <div class="flex flex-wrap gap-1.5">
      {['Python', 'Node.js', 'TypeScript', 'Claude AI', 'FastMCP', 'MCP SDK', 'Streamlit', 'Express', 'SQLite', 'WebSocket', 'Confluence API', 'VirusTotal API', 'OpenCTI', 'pycti', 'Gemini API'].map(tech => (
        <span class="inline-flex items-center px-2 py-0.5 rounded-md bg-white/[0.04] border border-white/[0.06] text-[9px] font-mono text-text-secondary">{tech}</span>
      ))}
    </div>
  </div>

  <!-- Operational summary -->
  <div class="rounded-xl bg-bg-secondary/50 border border-white/[0.06] p-4">
    <div class="flex items-center gap-2 mb-2">
      <div class="w-5 h-5 rounded-md bg-accent-primary/10 border border-accent-primary/20 flex items-center justify-center">
        <svg class="w-3 h-3 text-accent-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
        </svg>
      </div>
      <span class="text-text-primary text-xs font-semibold">Built for the team, used every day</span>
    </div>
    <p class="text-text-muted text-xs leading-relaxed">
      Every tool here was born from a real workflow pain point. Together they save our team hundreds of hours per month on inquiry processing, report generation, and threat enrichment.
    </p>
  </div>
</div>

---
import BaseLayout from '../layouts/BaseLayout.astro';
import Sidebar from '../components/Sidebar.astro';
import TabAbout from '../components/TabAbout.astro';
import TabResearch from '../components/TabResearch.astro';
import TabTools from '../components/TabTools.astro';
import TabSpeaking from '../components/TabSpeaking.astro';
import { getCollection } from 'astro:content';

const researchCount = (await getCollection('research')).length;
const toolsCount = (await getCollection('tools')).length;
const speakingCount = (await getCollection('speaking')).length;
---

<BaseLayout>
  <div class="min-h-screen p-4 md:p-6 lg:p-10">
    <div class="max-w-[1200px] mx-auto flex flex-col lg:flex-row gap-6">

      <!-- Sidebar -->
      <aside class="lg:w-[320px] lg:shrink-0">
        <div class="lg:sticky lg:top-6">
          <Sidebar />
        </div>
      </aside>

      <!-- Main content -->
      <main class="flex-1 min-w-0">
        <!-- Navigation tabs -->
        <nav class="content-card !p-3 mb-6">
          <div class="flex gap-1 overflow-x-auto" id="tab-nav">
            <button class="nav-tab active" data-tab="about">About</button>
            <button class="nav-tab" data-tab="research">Research <span class="ml-1 text-[9px] font-mono opacity-50">{researchCount}</span></button>
            <button class="nav-tab" data-tab="tools">Tools <span class="ml-1 text-[9px] font-mono opacity-50">{toolsCount}</span></button>
            <button class="nav-tab" data-tab="speaking">Speaking <span class="ml-1 text-[9px] font-mono opacity-50">{speakingCount}</span></button>
          </div>
        </nav>

        <!-- Tab panels -->
        <div id="tab-content">
          <div class="tab-panel active" data-panel="about">
            <TabAbout />
          </div>
          <div class="tab-panel" data-panel="research">
            <TabResearch />
          </div>
          <div class="tab-panel" data-panel="tools">
            <TabTools />
          </div>
          <div class="tab-panel" data-panel="speaking">
            <TabSpeaking />
          </div>
        </div>
      </main>
    </div>

    <!-- Footer -->
    <footer class="max-w-[1200px] mx-auto mt-8 mb-4">
      <div class="border-t border-white/[0.04] pt-4 px-2 flex flex-col sm:flex-row items-center justify-between gap-2">
        <p class="text-text-muted text-[10px] font-mono">
          &copy; 2026 Jacob Santos &middot; Senior Threat Researcher
        </p>
        <div class="flex items-center gap-4">
          <a href="https://github.com/jacobdsantos" target="_blank" rel="noopener" class="text-text-muted hover:text-accent-primary transition-colors" title="GitHub">
            <svg class="w-3.5 h-3.5" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/></svg>
          </a>
          <a href="mailto:jacobsantos.d@gmail.com" class="text-text-muted hover:text-accent-primary transition-colors" title="Email">
            <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"/></svg>
          </a>
          <span class="text-text-muted/40 text-[9px] font-mono">PH THT</span>
        </div>
      </div>
    </footer>
  </div>

  <!-- Back to top button (mobile) -->
  <button id="back-to-top" class="fixed bottom-6 right-6 z-40 w-10 h-10 rounded-xl bg-accent-primary/90 text-bg-primary shadow-lg shadow-accent-primary/20 flex items-center justify-center opacity-0 pointer-events-none transition-all duration-300 hover:scale-110 hover:shadow-accent-primary/30 lg:hidden" aria-label="Back to top">
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.5 15.75l7.5-7.5 7.5 7.5" />
    </svg>
  </button>

  <!-- Tab switching script -->
  <script>
    const tabs = document.querySelectorAll<HTMLButtonElement>('[data-tab]');
    const panels = document.querySelectorAll<HTMLDivElement>('[data-panel]');

    const switchTab = (target: string) => {
      tabs.forEach(t => t.classList.remove('active'));
      panels.forEach(p => {
        p.classList.remove('active');
        if (p.dataset.panel === target) p.classList.add('active');
      });
      const activeTab = document.querySelector(`[data-tab="${target}"]`);
      if (activeTab) activeTab.classList.add('active');
    };

    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        const target = tab.dataset.tab!;
        switchTab(target);
        history.replaceState(null, '', `#${target}`);
        window.scrollTo({ top: 0, behavior: 'smooth' });
      });
    });

    // Handle URL hash on load
    const hash = window.location.hash.slice(1);
    if (hash && ['about', 'research', 'tools', 'speaking'].includes(hash)) {
      switchTab(hash);
    }

    // Handle browser back/forward
    window.addEventListener('hashchange', () => {
      const h = window.location.hash.slice(1);
      if (h && ['about', 'research', 'tools', 'speaking'].includes(h)) {
        switchTab(h);
      }
    });

    // Cross-tab navigation links (from About cards)
    document.querySelectorAll('[data-nav-link]').forEach(el => {
      const link = (el as HTMLElement).dataset.navLink;
      if (link) {
        el.addEventListener('click', () => {
          const target = link.replace('#', '');
          switchTab(target);
          history.replaceState(null, '', `#${target}`);
          window.scrollTo({ top: 0, behavior: 'smooth' });
        });
      }
    });

    // Back to top button
    const backToTop = document.getElementById('back-to-top');
    if (backToTop) {
      window.addEventListener('scroll', () => {
        if (window.scrollY > 400) {
          backToTop.style.opacity = '1';
          backToTop.style.pointerEvents = 'auto';
        } else {
          backToTop.style.opacity = '0';
          backToTop.style.pointerEvents = 'none';
        }
      });
      backToTop.addEventListener('click', () => {
        window.scrollTo({ top: 0, behavior: 'smooth' });
      });
    }
  </script>
</BaseLayout>

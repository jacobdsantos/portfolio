---
import AppShell from '../design-system/components/AppShell.astro';

const contactMethods = [
  {
    icon: `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"/></svg>`,
    label: 'Email',
    value: 'jacobsantos.d@gmail.com',
    href: 'mailto:jacobsantos.d@gmail.com',
    description: 'Best way to reach me for professional inquiries.',
    accent: 'text-accent-primary bg-accent-primary/10 border-accent-primary/20',
  },
  {
    icon: `<svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>`,
    label: 'LinkedIn',
    value: 'jacob-santos',
    href: 'https://www.linkedin.com/in/jacob-santos-046313198/',
    description: 'Connect with me professionally.',
    accent: 'text-blue-400 bg-blue-500/10 border-blue-500/20',
  },
  {
    icon: `<svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/></svg>`,
    label: 'GitHub',
    value: 'jacobdsantos',
    href: 'https://github.com/jacobdsantos',
    description: 'Open-source projects and personal tools.',
    accent: 'text-gray-300 bg-gray-500/10 border-gray-500/20',
  },
];
---

<AppShell
  title="Contact"
  description="Get in touch with Jacob Santos for speaking engagements, research collaboration, and workshop opportunities."
  breadcrumbs={[
    { label: 'Home', href: '/' },
    { label: 'Contact' },
  ]}
>

  <div class="content-card mb-6">
    <h1 class="section-title">Contact</h1>
    <p class="section-subtitle">Interested in collaborating? Here's how to reach me.</p>

    <!-- Contact methods -->
    <div class="space-y-4 mb-8">
      {contactMethods.map(method => (
        <a
          href={method.href}
          target={method.href.startsWith('http') ? '_blank' : undefined}
          rel={method.href.startsWith('http') ? 'noopener' : undefined}
          class="card !p-5 group block"
        >
          <div class="flex items-start gap-4">
            <div class={`w-11 h-11 rounded-xl border flex items-center justify-center shrink-0 ${method.accent} transition-transform duration-300 group-hover:scale-110`} set:html={method.icon} />
            <div class="flex-1 min-w-0">
              <div class="flex items-center gap-2 mb-0.5">
                <h3 class="text-text-primary font-semibold text-sm group-hover:text-accent-primary transition-colors">{method.label}</h3>
                <svg class="w-3 h-3 text-text-muted/40 shrink-0 opacity-0 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.5 19.5l15-15m0 0H8.25m11.25 0v11.25"/></svg>
              </div>
              <p class="text-accent-primary text-xs font-mono mb-1">{method.value}</p>
              <p class="text-text-muted text-xs leading-relaxed">{method.description}</p>
            </div>
          </div>
        </a>
      ))}
    </div>

    <!-- Location -->
    <div class="rounded-xl bg-bg-secondary/50 border border-white/[0.06] p-5 mb-8">
      <div class="flex items-center gap-3 mb-3">
        <div class="w-9 h-9 rounded-xl bg-accent-warning/10 border border-accent-warning/20 flex items-center justify-center text-accent-warning shrink-0">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z"/></svg>
        </div>
        <div>
          <h3 class="text-text-primary text-sm font-semibold">Location</h3>
          <p class="text-text-secondary text-xs font-mono">Philippines</p>
        </div>
      </div>
      <p class="text-text-muted text-xs leading-relaxed">
        Based in the Philippines, working with global teams. Available for remote engagements and international travel for training and speaking events.
      </p>
    </div>

    <!-- Professional inquiries note -->
    <div class="rounded-2xl bg-gradient-to-br from-accent-primary/[0.04] via-bg-surface/80 to-accent-secondary/[0.04] border border-white/[0.06] p-5 md:p-6">
      <div class="flex items-start gap-3">
        <div class="w-9 h-9 rounded-xl bg-accent-primary/10 border border-accent-primary/20 flex items-center justify-center shrink-0">
          <svg class="w-4 h-4 text-accent-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11.25 11.25l.041-.02a.75.75 0 011.063.852l-.708 2.836a.75.75 0 001.063.853l.041-.021M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9-3.75h.008v.008H12V8.25z" />
          </svg>
        </div>
        <div>
          <h3 class="text-text-primary text-sm font-semibold mb-1">About Professional Inquiries</h3>
          <p class="text-text-secondary text-xs leading-relaxed mb-3">
            I'm open to the following types of collaboration:
          </p>
          <ul class="space-y-1.5">
            <li class="flex items-start gap-2">
              <span class="w-1 h-1 rounded-full bg-accent-primary/40 mt-1.5 shrink-0"></span>
              <span class="text-text-muted text-xs leading-relaxed"><span class="text-text-secondary font-medium">Speaking engagements</span> -- conferences, summits, and industry events</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="w-1 h-1 rounded-full bg-accent-primary/40 mt-1.5 shrink-0"></span>
              <span class="text-text-muted text-xs leading-relaxed"><span class="text-text-secondary font-medium">Training programs</span> -- advanced threat defense, threat hunting, and cybersecurity workshops</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="w-1 h-1 rounded-full bg-accent-primary/40 mt-1.5 shrink-0"></span>
              <span class="text-text-muted text-xs leading-relaxed"><span class="text-text-secondary font-medium">Research collaboration</span> -- joint threat intelligence research and publication</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="w-1 h-1 rounded-full bg-accent-primary/40 mt-1.5 shrink-0"></span>
              <span class="text-text-muted text-xs leading-relaxed"><span class="text-text-secondary font-medium">Technical consulting</span> -- security automation, threat intelligence tooling, and AI-powered analysis</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

</AppShell>

---
import AppShell from '../design-system/components/AppShell.astro';
import ResumeBuilder from '../islands/resume/ResumeBuilder';
---

<AppShell
  title="Resume Builder"
  description="Private resume builder â€” not indexed."
>
  <!-- noindex: this page is private, only accessible via direct URL -->
  <meta slot="head" name="robots" content="noindex, nofollow" />

  <div class="content-card mb-6">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="section-title !mb-0">Resume Builder</h1>
        <p class="text-text-muted text-xs mt-1">
          ATS-optimized resume tailored to any job description. Paste a JD, analyze keyword matches, and export a tailored PDF.
        </p>
      </div>
      <a href="/resume" target="_blank" class="inline-flex items-center gap-1.5 text-accent-primary text-xs font-medium hover:underline shrink-0">
        View public resume
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
        </svg>
      </a>
    </div>
  </div>

  <!-- React island: interactive resume builder -->
  <div id="resume-root" class="mb-6">
    <ResumeBuilder client:only="react" />
  </div>
</AppShell>

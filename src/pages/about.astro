---
import AppShell from '../design-system/components/AppShell.astro';

const valuePillars = [
  {
    icon: `<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z"/></svg>`,
    title: 'Proactive Hunter',
    desc: 'Proactive threat hunting through YARA rules, infrastructure fingerprinting, and telemetry analysis -- from OSINT to APT attribution.',
    color: 'text-red-400',
    bg: 'bg-red-500/[0.08]',
    bgImage: '/images/cards/about-hunter.jpg',
  },
  {
    icon: `<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09z"/></svg>`,
    title: 'Builder Mentality',
    desc: 'Every tool solves a real workflow problem -- from threat intelligence gathering to inquiry triage to automated detection. Built and shipped production tools adopted by the team.',
    color: 'text-accent-primary',
    bg: 'bg-accent-primary/[0.08]',
    bgImage: '/images/cards/about-builder.jpg',
  },
  {
    icon: `<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.26 10.147a60.438 60.438 0 00-.491 6.347A48.627 48.627 0 0112 20.904a48.627 48.627 0 018.232-4.41 60.46 60.46 0 00-.491-6.347"/></svg>`,
    title: 'Threat Defense Instructor',
    desc: 'Delivered hands-on workshops for multinational groups, government agencies, and enterprises across multiple countries. Created conference lab content for 2 consecutive years.',
    color: 'text-violet-400',
    bg: 'bg-violet-500/[0.08]',
    bgImage: '/images/cards/about-instructor.jpg',
  },
];

const timeline = [
  {
    year: 'Jan 2025',
    title: 'Senior Threat Researcher',
    org: 'Trend Micro',
    bullets: [
      'Lead ransomware spotlight research and APT campaign tracking with Diamond Model attribution',
      'Monitor critical global events for threat activity across dark web, domain registrations, and internal telemetry',
      'Built and maintain production security tools adopted team-wide for threat intelligence and automation workflows',
      'Deliver advanced threat defense workshops internationally for multinational groups, government agencies, and enterprises',
    ],
  },
  {
    year: 'Jun 2023',
    title: 'Threat Hunter / Threat Researcher',
    org: 'Trend Micro',
    bullets: [
      'Proactively hunted emerging threats via OSINT and internal telemetry, writing YARA rules, building dashboards, and performing malware analysis on samples',
      'Published research articles, authored numerous spot and threat intelligence reports, and contributed to ransomware spotlight publications',
    ],
  },
  {
    year: 'Oct 2022',
    title: 'Cybersecurity Threat Engineer',
    org: 'Trend Micro (Training)',
    bullets: [
      '6-month intensive malware analysis training: assembly programming, reverse engineering, binary/non-binary analysis across all platforms, with practical elimination-based exams',
    ],
  },
];

const personJsonLd = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Jacob Santos",
  "jobTitle": "Senior Threat Researcher",
  "worksFor": {
    "@type": "Organization",
    "name": "Trend Micro"
  },
  "url": "https://jacobsantos.pages.dev",
  "sameAs": [
    "https://github.com/jacobdsantos",
    "https://www.linkedin.com/in/jacob-santos-046313198/"
  ],
  "knowsAbout": [
    "Ransomware Analysis",
    "APT Campaign Tracking",
    "Threat Intelligence",
    "MITRE ATT&CK",
    "Malware Analysis",
    "Reverse Engineering",
    "Infrastructure Hunting",
    "Diamond Model",
    "YARA Rules",
    "Security Automation",
    "AI-Assisted Analysis"
  ],
  "description": "Senior threat researcher specializing in ransomware analysis, APT tracking, infrastructure hunting, and security automation."
};
---

<AppShell
  title="About"
  description="Learn about Jacob Santos -- senior threat researcher specializing in ransomware analysis, APT tracking, infrastructure hunting, and security automation."
  jsonLd={personJsonLd}
  breadcrumbs={[
    { label: 'Home', href: '/' },
    { label: 'About' },
  ]}
>

  <!-- Hero image -->
  <div class="relative rounded-2xl overflow-hidden mb-6 animate-fade-up" data-reveal>
    <img src="/images/pages/about-hero.jpg" alt="About Jacob Santos" class="w-full h-44 md:h-56 object-cover" loading="eager" />
    <div class="absolute inset-0 bg-gradient-to-t from-[var(--bg-primary)] via-[var(--bg-primary)]/40 to-transparent"></div>
    <div class="absolute bottom-0 left-0 right-0 p-5 md:p-6">
      <h1 class="text-2xl md:text-3xl font-bold text-text-primary font-display tracking-tight">About Me</h1>
      <p class="text-text-secondary text-sm mt-1">Threat researcher. Tool builder. Instructor.</p>
    </div>
  </div>

  <div class="content-card">
    <!-- Value Proposition -->
    <div class="rounded-2xl bg-gradient-to-br from-accent-primary/[0.04] via-bg-surface/80 to-accent-secondary/[0.04] border border-white/[0.06] p-5 md:p-6 mb-8 relative overflow-hidden animate-fade-up-delay-2">
      <div class="absolute -top-10 -right-10 w-32 h-32 bg-accent-primary/[0.03] rounded-full blur-2xl pointer-events-none"></div>
      <p class="text-text-primary text-[15px] leading-relaxed font-medium relative">
        I work at the intersection of <span class="text-accent-primary">threat research</span>,
        <span class="text-accent-tertiary">security automation</span>, and
        <span class="text-violet-400">intelligence dissemination</span>.
      </p>
      <p class="text-text-secondary text-sm leading-relaxed mt-2 relative">
        I hunt for emerging threats, analyze malware, track campaigns, and build tools that make the team faster.
        I also deliver advanced threat defense workshops internationally for government agencies, law enforcement, and enterprises.
        What drives me is the investigation -- solving puzzles, connecting dots, and finding things that haven't been reported yet.
      </p>
    </div>

    <!-- Key Highlights -->
    <div class="grid grid-cols-2 sm:grid-cols-4 gap-3 mb-8" data-reveal>
      <div class="text-center py-4 rounded-xl bg-bg-surface/60 border border-white/[0.04] group hover:border-accent-primary/15 transition-all">
        <div class="text-2xl font-bold text-accent-primary font-mono mb-0.5">10+</div>
        <div class="text-text-muted text-[9px] uppercase tracking-widest">Tools Built</div>
      </div>
      <div class="text-center py-4 rounded-xl bg-bg-surface/60 border border-white/[0.04] group hover:border-accent-danger/15 transition-all">
        <div class="text-2xl font-bold text-accent-danger font-mono mb-0.5">17</div>
        <div class="text-text-muted text-[9px] uppercase tracking-widest">Published Research</div>
      </div>
      <div class="text-center py-4 rounded-xl bg-bg-surface/60 border border-white/[0.04] group hover:border-accent-secondary/15 transition-all">
        <div class="text-2xl font-bold text-accent-secondary font-mono mb-0.5">5</div>
        <div class="text-text-muted text-[9px] uppercase tracking-widest">Countries</div>
      </div>
      <div class="text-center py-4 rounded-xl bg-bg-surface/60 border border-white/[0.04] group hover:border-accent-warning/15 transition-all">
        <div class="text-2xl font-bold text-accent-warning font-mono mb-0.5">1</div>
        <div class="text-text-muted text-[9px] uppercase tracking-widest">Patent</div>
      </div>
    </div>

    <!-- What I Bring -->
    <h3 class="text-lg font-semibold text-text-primary mb-4 tracking-tight font-display" data-reveal>What I Bring</h3>
    <div class="space-y-3 mb-8" data-reveal>
      {valuePillars.map(pillar => (
        <div class="flex items-start gap-4 p-4 rounded-xl bg-bg-surface/40 border border-white/[0.04] hover:border-white/[0.08] transition-all relative overflow-hidden">
          {pillar.bgImage && (
            <img src={pillar.bgImage} alt="" class="absolute inset-0 w-full h-full object-cover opacity-[0.1] pointer-events-none" loading="lazy" aria-hidden="true" />
          )}
          <div class={`w-9 h-9 rounded-xl ${pillar.bg} border border-white/[0.06] flex items-center justify-center shrink-0 ${pillar.color} relative z-[1]`} set:html={pillar.icon} />
          <div class="relative z-[1]">
            <h4 class={`${pillar.color} font-semibold text-sm mb-0.5`}>{pillar.title}</h4>
            <p class="text-text-muted text-xs leading-relaxed">{pillar.desc}</p>
          </div>
        </div>
      ))}
    </div>

    <!-- Research Focus -->
    <h3 class="text-lg font-semibold text-text-primary mb-4 tracking-tight font-display" data-reveal>Research Focus</h3>
    <div class="space-y-2.5 mb-8" data-reveal>
      <div class="group">
        <div class="flex items-center justify-between text-xs mb-1.5">
          <span class="text-text-secondary font-medium">Ransomware Families</span>
          <span class="text-accent-danger font-mono">Primary</span>
        </div>
        <div class="h-1.5 rounded-full bg-bg-surface overflow-hidden">
          <div class="h-full rounded-full bg-gradient-to-r from-accent-danger to-red-400 transition-all duration-1000" style="width: 95%"></div>
        </div>
      </div>
      <div class="group">
        <div class="flex items-center justify-between text-xs mb-1.5">
          <span class="text-text-secondary font-medium">BYOVD & Defense Evasion</span>
          <span class="text-accent-warning font-mono">Active</span>
        </div>
        <div class="h-1.5 rounded-full bg-bg-surface overflow-hidden">
          <div class="h-full rounded-full bg-gradient-to-r from-accent-warning to-amber-400 transition-all duration-1000" style="width: 80%"></div>
        </div>
      </div>
      <div class="group">
        <div class="flex items-center justify-between text-xs mb-1.5">
          <span class="text-text-secondary font-medium">Cross-Platform Threats</span>
          <span class="text-accent-tertiary font-mono">Active</span>
        </div>
        <div class="h-1.5 rounded-full bg-bg-surface overflow-hidden">
          <div class="h-full rounded-full bg-gradient-to-r from-accent-tertiary to-cyan-400 transition-all duration-1000" style="width: 70%"></div>
        </div>
      </div>
      <div class="group">
        <div class="flex items-center justify-between text-xs mb-1.5">
          <span class="text-text-secondary font-medium">APT Campaigns & Espionage</span>
          <span class="text-accent-secondary font-mono">Active</span>
        </div>
        <div class="h-1.5 rounded-full bg-bg-surface overflow-hidden">
          <div class="h-full rounded-full bg-gradient-to-r from-accent-secondary to-violet-400 transition-all duration-1000" style="width: 65%"></div>
        </div>
      </div>
      <div class="group">
        <div class="flex items-center justify-between text-xs mb-1.5">
          <span class="text-text-secondary font-medium">Infrastructure Hunting & C2 Mapping</span>
          <span class="text-accent-primary font-mono">Active</span>
        </div>
        <div class="h-1.5 rounded-full bg-bg-surface overflow-hidden">
          <div class="h-full rounded-full bg-gradient-to-r from-accent-primary to-emerald-400 transition-all duration-1000" style="width: 60%"></div>
        </div>
      </div>
    </div>

    <!-- Career Timeline -->
    <h3 class="text-lg font-semibold text-text-primary mb-4 tracking-tight font-display" data-reveal>Experience</h3>
    <div class="border-l-2 border-accent-primary/20 ml-3 space-y-6 mb-8" data-reveal>
      {timeline.map(item => (
        <div class="relative pl-7">
          <div class="absolute -left-[7px] top-1.5 w-3 h-3 rounded-full bg-bg-primary border-2 border-accent-primary"></div>
          <div class="flex items-center gap-2 flex-wrap">
            <span class="text-accent-primary text-xs font-mono font-semibold">{item.year}</span>
            <span class="text-text-muted text-[10px]">&middot;</span>
            <span class="text-accent-secondary text-xs font-mono">{item.org}</span>
          </div>
          <h4 class="text-text-primary font-semibold text-sm mt-0.5">{item.title}</h4>
          <ul class="mt-2 space-y-1.5">
            {item.bullets.map(bullet => (
              <li class="flex items-start gap-2">
                <span class="w-1 h-1 rounded-full bg-accent-primary/40 mt-1.5 shrink-0"></span>
                <span class="text-text-muted text-xs leading-relaxed">{bullet}</span>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Disclosure notice -->
    <div class="rounded-xl bg-accent-warning/[0.04] border border-accent-warning/10 p-4" data-reveal>
      <div class="flex items-start gap-3">
        <div class="w-8 h-8 rounded-lg bg-accent-warning/10 border border-accent-warning/15 flex items-center justify-center shrink-0">
          <svg class="w-4 h-4 text-accent-warning" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z"/>
          </svg>
        </div>
        <div>
          <p class="text-accent-warning text-xs font-semibold mb-1">Note on Published Work</p>
          <p class="text-text-muted text-[11px] leading-relaxed">
            The research showcased here represents my publicly available work. The rest is TLP:RED.
          </p>
        </div>
      </div>
    </div>
  </div>

</AppShell>

---
import AppShell from '../design-system/components/AppShell.astro';
import resumeData from '../data/resume-master.json';

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "ProfilePage",
  "name": "Jacob Santos — Resume",
  "description": "Senior Threat Researcher resume — threat research, security automation, international training.",
  "url": "https://jacobsantos.pages.dev/resume",
  "mainEntity": {
    "@type": "Person",
    "name": "Jacob Santos",
    "jobTitle": "Senior Threat Researcher",
    "email": "jacobsantos.d@gmail.com",
    "url": "https://jacobsantos.pages.dev",
    "sameAs": [
      "https://www.linkedin.com/in/jacob-santos-046313198/",
      "https://github.com/jacobdsantos"
    ]
  }
};

// Harvard-style action verb bullets — pre-written for maximum impact
const harvardBullets = {
  senior: [
    "Spearheaded publication of 17 peer-cited threat research articles dissecting novel ransomware TTPs, EDR evasion techniques, and cross-platform attack chains — intelligence leveraged by 50+ global SOC teams to fortify detection capabilities",
    "Authored 14 X/Twitter microstory threads translating complex threat intelligence into concise, actionable analyst content — amplifying team research visibility across the security community",
    "Architected and delivered 10+ production-grade security automation platforms — including AI-driven threat triage pipelines, Model Context Protocol servers, and a multi-model orchestration desktop application — collectively eliminating 200+ analyst-hours monthly",
    "Orchestrated advanced cybercrime training curricula for INTERPOL operations spanning APAC, Africa, EU, and MENA — equipping 100+ international law enforcement officers with ransomware forensics and cross-border investigation methodologies",
    "Pioneered international Advanced Threat Defense training programs across Japan (2x), Oman, and the Philippines — upskilling government agencies (DICT, USAID BEACON/CPIT) and financial sector enterprises in proactive threat hunting",
    "Delivered keynote address at Philippine Airlines Cybersecurity Awareness Month and presented original research at DECODE, DOST ICT Summit, and CIRQIT — establishing thought leadership in ransomware defense",
    "Tracked and documented evolving ransomware tradecraft including BYOVD exploitation, GPO abuse, safe mode persistence, and cross-platform targeting of ESXi/Linux infrastructure — contributing to proactive detection rule development",
  ],
  analyst: [
    "Investigated and triaged high-priority threat inquiries across the full threat hunting pipeline — from IOC enrichment and OSINT analysis to SPOT report generation and customer-facing security advisories",
    "Tracked emerging ransomware families and APT campaigns, contributing actionable threat intelligence to both internal security operations and external-facing advisories distributed to enterprise customers",
    "Enriched indicators of compromise leveraging VirusTotal, Web Reputation Services, and internal threat intelligence platforms — enabling accurate threat classification and accelerated response prioritization",
  ],
};
---

<AppShell
  title="Resume"
  description="Senior Threat Researcher resume — threat research, security automation, international training."
  jsonLd={jsonLd}
  breadcrumbs={[
    { label: 'Home', href: '/' },
    { label: 'Resume' },
  ]}
>
  <div class="content-card mb-6">
    <div class="resume-page max-w-[800px] mx-auto">

      <!-- Header -->
      <header class="mb-6 border-b border-white/[0.06] pb-6">
        <h1 class="text-3xl font-bold text-text-primary tracking-tight">Jacob Santos</h1>
        <p class="text-accent-primary text-lg font-medium mt-1">Senior Threat Researcher</p>
        <div class="flex flex-wrap items-center gap-x-5 gap-y-1 mt-3 text-text-secondary text-sm font-mono">
          <a href="mailto:jacobsantos.d@gmail.com" class="hover:text-accent-primary transition-colors">jacobsantos.d@gmail.com</a>
          <span class="text-text-muted">|</span>
          <a href="https://www.linkedin.com/in/jacob-santos-046313198/" target="_blank" rel="noopener" class="hover:text-accent-primary transition-colors">LinkedIn</a>
          <span class="text-text-muted">|</span>
          <a href="https://github.com/jacobdsantos" target="_blank" rel="noopener" class="hover:text-accent-primary transition-colors">GitHub</a>
          <span class="text-text-muted">|</span>
          <a href="https://jacobsantos.pages.dev" class="hover:text-accent-primary transition-colors">jacobsantos.pages.dev</a>
          <span class="text-text-muted">|</span>
          <span>Philippines</span>
        </div>
      </header>

      <!-- Summary -->
      <section class="mb-6">
        <h2 class="resume-section-title">Summary</h2>
        <p class="text-text-secondary text-sm leading-relaxed">
          Senior threat researcher with deep expertise in ransomware analysis, APT campaign tracking, and defense evasion techniques.
          Published 17 research articles reaching global security teams. Architected and deployed 10+ production-grade security automation tools.
          Delivered advanced threat defense training internationally for INTERPOL, government agencies across 4 countries, and enterprise organizations.
          Combines deep technical research with a builder mentality and a commitment to elevating collective defense through knowledge transfer.
        </p>
      </section>

      <!-- Experience -->
      <section class="mb-6">
        <h2 class="resume-section-title">Experience</h2>

        <div class="mb-5">
          <div class="flex items-baseline justify-between flex-wrap gap-1">
            <h3 class="text-text-primary font-semibold text-[15px]">Senior Threat Researcher</h3>
            <span class="text-text-muted text-xs font-mono">2024 — Present</span>
          </div>
          <p class="text-accent-secondary text-sm font-mono">Trend Micro &middot; Philippines Threat Hunting Team</p>
          <ul class="mt-2 space-y-1.5 resume-bullets">
            {harvardBullets.senior.map(bullet => (
              <li>{bullet}</li>
            ))}
          </ul>
        </div>

        <div>
          <div class="flex items-baseline justify-between flex-wrap gap-1">
            <h3 class="text-text-primary font-semibold text-[15px]">Threat Analyst</h3>
            <span class="text-text-muted text-xs font-mono">2022 — 2024</span>
          </div>
          <p class="text-accent-secondary text-sm font-mono">Trend Micro &middot; Philippines Threat Hunting Team</p>
          <ul class="mt-2 space-y-1.5 resume-bullets">
            {harvardBullets.analyst.map(bullet => (
              <li>{bullet}</li>
            ))}
          </ul>
        </div>
      </section>

      <!-- Technical Skills -->
      <section class="mb-6">
        <h2 class="resume-section-title">Technical Skills</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-x-8 gap-y-2 text-sm">
          {resumeData.skills.map(group => (
            <div>
              <span class="text-text-primary font-medium">{group.group}:</span>
              <span class="text-text-secondary"> {group.items.join(', ')}</span>
            </div>
          ))}
        </div>
      </section>

      <!-- Key Projects -->
      <section class="mb-6">
        <h2 class="resume-section-title">Key Projects</h2>
        <ul class="space-y-1.5 text-sm">
          {resumeData.projects.slice(0, 5).map(proj => (
            <li class="text-text-secondary">
              <span class="text-text-primary font-medium">{proj.name}</span> — {proj.summary}
            </li>
          ))}
        </ul>
      </section>

      <!-- Selected Publications -->
      <section class="mb-6">
        <h2 class="resume-section-title">Selected Publications</h2>
        <ul class="space-y-1 text-sm">
          {resumeData.publications.map(pub => (
            <li class="text-text-secondary">
              <a href={pub.url} target="_blank" rel="noopener" class="text-text-primary font-medium hover:text-accent-primary transition-colors">"{pub.title}"</a>
              <span> — {pub.publisher}, {pub.date}</span>
            </li>
          ))}
          <li class="text-text-secondary italic">
            + {31 - resumeData.publications.length} additional published articles and 14 research threads — see <a href="/research" class="text-accent-primary hover:underline">full research portfolio</a>
          </li>
        </ul>
      </section>

      <!-- Speaking & Training -->
      <section class="mb-6">
        <h2 class="resume-section-title">Speaking & Training</h2>
        <ul class="space-y-1 text-sm text-text-secondary">
          <li><span class="text-text-primary font-medium">INTERPOL</span> — Recurring trainer for international cybercrime programs: Operation Synergia (Ransomware), Advanced Threat Defense APAC</li>
          <li><span class="text-text-primary font-medium">International Training</span> — Led Advanced Threat Defense programs in Japan (2x), Oman, Philippines for government and enterprise organizations</li>
          <li><span class="text-text-primary font-medium">Conference Speaker</span> — DECODE 2024/2025, DOST ICT Summit, CIRQIT, PUP Quezon City</li>
          <li><span class="text-text-primary font-medium">Enterprise Keynote</span> — Philippine Airlines Cybersecurity Awareness Month, Chinabank, BDO, SM</li>
        </ul>
      </section>

      <!-- Education -->
      <section class="mb-6">
        <h2 class="resume-section-title">Education</h2>
        {resumeData.education.map(edu => (
          <div class="text-sm">
            <span class="text-text-primary font-medium">{edu.degree}</span>
            <span class="text-text-secondary"> — {edu.school}, {edu.date}</span>
          </div>
        ))}
      </section>

      <!-- Actions -->
      <div class="flex flex-wrap items-center gap-3 pt-4 border-t border-white/[0.06]">
        <button onclick="window.print()" class="inline-flex items-center gap-2 px-5 py-2.5 rounded-xl bg-accent-primary text-bg-primary font-semibold text-sm transition-all hover:shadow-[0_0_30px_-5px_rgba(0,223,162,0.4)] hover:scale-[1.02] print:hidden">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6.72 13.829c-.24.03-.48.062-.72.096m.72-.096a42.415 42.415 0 0110.56 0m-10.56 0L6.34 18m10.94-4.171c.24.03.48.062.72.096m-.72-.096L17.66 18m0 0l.229 2.523a1.125 1.125 0 01-1.12 1.227H7.231c-.662 0-1.18-.568-1.12-1.227L6.34 18m11.318 0h1.091A2.25 2.25 0 0021 15.75V9.456c0-1.081-.768-2.015-1.837-2.175a48.055 48.055 0 00-1.913-.247M6.34 18H5.25A2.25 2.25 0 013 15.75V9.456c0-1.081.768-2.015 1.837-2.175a48.041 48.041 0 011.913-.247m10.5 0a48.536 48.536 0 00-10.5 0m10.5 0V3.375c0-.621-.504-1.125-1.125-1.125h-8.25c-.621 0-1.125.504-1.125 1.125v3.659M18.75 3.75H5.25" />
          </svg>
          Print / Save as PDF
        </button>
        <a href="/" class="inline-flex items-center gap-2 px-4 py-2.5 rounded-xl bg-bg-surface border border-white/[0.06] text-text-muted text-sm font-medium hover:text-text-primary hover:border-white/10 transition-all print:hidden">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
          </svg>
          Back to Portfolio
        </a>
      </div>
    </div>
  </div>

  <style>
    .resume-section-title {
      font-size: 0.875rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      color: var(--accent-primary, #00dfa2);
      border-bottom: 1px solid rgba(255,255,255,0.06);
      padding-bottom: 0.375rem;
      margin-bottom: 0.75rem;
      font-family: 'JetBrains Mono', monospace;
    }

    .resume-bullets li {
      position: relative;
      padding-left: 1rem;
      color: #8b949e;
      font-size: 0.8125rem;
      line-height: 1.6;
    }

    .resume-bullets li::before {
      content: '';
      position: absolute;
      left: 0;
      top: 0.55rem;
      width: 4px;
      height: 4px;
      border-radius: 50%;
      background: #00dfa2;
      opacity: 0.5;
    }

    @media print {
      .resume-page {
        max-width: 100% !important;
        padding: 0 !important;
        margin: 0 !important;
        color: #1a1a1a !important;
      }

      body {
        background: white !important;
        background-image: none !important;
      }

      h1, h2, h3, h4 { color: #1a1a1a !important; }

      .resume-section-title {
        color: #1a1a1a !important;
        border-bottom-color: #ccc !important;
      }

      .resume-bullets li { color: #333 !important; }
      .resume-bullets li::before { background: #333 !important; }

      a { color: #333 !important; text-decoration: none !important; }

      * {
        -webkit-print-color-adjust: exact !important;
        print-color-adjust: exact !important;
      }

      @page {
        margin: 1cm;
        size: A4;
      }
    }
  </style>
</AppShell>

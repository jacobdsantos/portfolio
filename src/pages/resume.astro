---
import AppShell from '../design-system/components/AppShell.astro';
import ResumeBuilder from '../islands/resume/ResumeBuilder';

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "ProfilePage",
  "name": "Jacob Santos — Resume",
  "description": "Senior Threat Researcher resume — threat research, security automation, international training.",
  "url": "https://jacobsantos.pages.dev/resume",
  "mainEntity": {
    "@type": "Person",
    "name": "Jacob Santos",
    "jobTitle": "Senior Threat Researcher",
    "email": "jacobsantos.d@gmail.com",
    "url": "https://jacobsantos.pages.dev",
    "sameAs": [
      "https://www.linkedin.com/in/jacob-santos-046313198/",
      "https://github.com/jacobdsantos"
    ]
  }
};
---

<AppShell
  title="Resume"
  description="Senior Threat Researcher resume — threat research, security automation, international training."
  jsonLd={jsonLd}
  breadcrumbs={[
    { label: 'Home', href: '/' },
    { label: 'Resume' },
  ]}
>
  <div class="content-card mb-6">
    <h1 class="section-title">Resume Builder</h1>
    <p class="section-subtitle">
      ATS-optimized resume tailored to any job description.
      <span class="text-text-muted">Paste a JD, analyze keyword matches, and export a tailored PDF.</span>
    </p>
  </div>

  <!-- React island: interactive resume builder -->
  <div id="resume-root" class="mb-6">
    <ResumeBuilder client:only="react" />
  </div>

  <!-- Fallback static resume for no-JS users -->
  <noscript>
    <div class="content-card">
      <div class="resume-page max-w-[800px] mx-auto">

        <!-- Header -->
        <header class="mb-6 border-b border-white/[0.06] pb-6">
          <h1 class="text-3xl font-bold text-text-primary tracking-tight">Jacob Santos</h1>
          <p class="text-accent-primary text-lg font-medium mt-1">Senior Threat Researcher</p>
          <div class="flex flex-wrap items-center gap-x-5 gap-y-1 mt-3 text-text-secondary text-sm font-mono">
            <a href="mailto:jacobsantos.d@gmail.com" class="hover:text-accent-primary transition-colors">jacobsantos.d@gmail.com</a>
            <span class="text-text-muted">|</span>
            <a href="https://www.linkedin.com/in/jacob-santos-046313198/" target="_blank" rel="noopener" class="hover:text-accent-primary transition-colors">LinkedIn</a>
            <span class="text-text-muted">|</span>
            <a href="https://github.com/jacobdsantos" target="_blank" rel="noopener" class="hover:text-accent-primary transition-colors">GitHub</a>
            <span class="text-text-muted">|</span>
            <a href="https://jacobsantos.pages.dev" class="hover:text-accent-primary transition-colors">jacobsantos.pages.dev</a>
            <span class="text-text-muted">|</span>
            <span>Philippines</span>
          </div>
        </header>

        <!-- Summary -->
        <section class="mb-6">
          <h2 class="resume-section-title">Summary</h2>
          <p class="text-text-secondary text-sm leading-relaxed">
            Senior threat researcher with deep expertise in ransomware analysis, APT campaign tracking, and defense evasion techniques.
            Published 17 research articles reaching global security teams. Designed and shipped 10+ production-grade security automation tools.
            Delivered advanced threat defense training internationally for INTERPOL, government agencies across 4 countries, and enterprise organizations.
            Combines deep technical research with a builder mentality and a commitment to elevating collective defense through knowledge transfer.
          </p>
        </section>

        <!-- Experience -->
        <section class="mb-6">
          <h2 class="resume-section-title">Experience</h2>

          <div class="mb-5">
            <div class="flex items-baseline justify-between flex-wrap gap-1">
              <h3 class="text-text-primary font-semibold text-[15px]">Senior Threat Researcher</h3>
              <span class="text-text-muted text-xs font-mono">Present</span>
            </div>
            <p class="text-accent-secondary text-sm font-mono">Trend Micro &middot; Philippines Threat Hunting Team</p>
            <ul class="mt-2 space-y-1.5 resume-bullets">
              <li>Published 17 research articles on the company research blog covering novel ransomware families, APT campaigns, cross-platform threats, and EDR evasion techniques — reaching global security operations teams</li>
              <li>Authored 14 X/Twitter microstory threads translating complex threat intelligence into actionable, widely-shared analyst content</li>
              <li>Designed, built, and deployed 10+ production tools — including AI-powered threat inquiry pipelines, MCP servers (Model Context Protocol), Streamlit-based analysis platforms, and a desktop GUI application — collectively saving hundreds of analyst-hours monthly</li>
              <li>Delivered INTERPOL cybercrime training programs (Operation Synergia, Advanced Threat Defense) to international law enforcement officers across APAC, Africa, EU, and MENA regions</li>
              <li>Led Advanced Threat Defense (ATD) training curriculum internationally, including programs in Japan (2x), Oman (1x), and the Philippines for government agencies (DICT, USAID BEACON/CPIT) and financial sector enterprises (Chinabank, BDO, SM)</li>
              <li>Keynoted at Philippine Airlines for Cybersecurity Awareness Month; presented at DECODE (flagship cybersecurity conference), DOST ICT Summit, and CIRQIT enterprise security events</li>
              <li>Tracked and documented evolving ransomware tradecraft including BYOVD (Bring Your Own Vulnerable Driver), GPO abuse, safe mode exploitation, and cross-platform targeting of ESXi/Linux infrastructure</li>
            </ul>
          </div>

          <div>
            <div class="flex items-baseline justify-between flex-wrap gap-1">
              <h3 class="text-text-primary font-semibold text-[15px]">Threat Analyst</h3>
              <span class="text-text-muted text-xs font-mono">Previous</span>
            </div>
            <p class="text-accent-secondary text-sm font-mono">Trend Micro &middot; Philippines Threat Hunting Team</p>
            <ul class="mt-2 space-y-1.5 resume-bullets">
              <li>Investigated and triaged threat inquiries across the full threat hunting pipeline — from IOC enrichment and OSINT analysis to SPOT report generation and customer-facing advisories</li>
              <li>Tracked emerging ransomware families and APT campaigns, contributing threat intelligence to internal and external-facing security advisories</li>
              <li>Enriched indicators of compromise using VirusTotal, WRS (Web Reputation Services), and internal threat intelligence platforms for accurate threat classification</li>
            </ul>
          </div>
        </section>

        <!-- Technical Skills -->
        <section class="mb-6">
          <h2 class="resume-section-title">Technical Skills</h2>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-x-8 gap-y-2 text-sm">
            <div>
              <span class="text-text-primary font-medium">Research & Analysis:</span>
              <span class="text-text-secondary">Ransomware Analysis, APT Tracking, MITRE ATT&CK, IOC Enrichment, Threat Hunting, OSINT, Malware Analysis</span>
            </div>
            <div>
              <span class="text-text-primary font-medium">Development:</span>
              <span class="text-text-secondary">Python, Node.js/TypeScript, FastMCP, MCP SDK, Streamlit, Express, SQLite, WebSocket, REST APIs</span>
            </div>
            <div>
              <span class="text-text-primary font-medium">AI & Automation:</span>
              <span class="text-text-secondary">Claude AI, Azure OpenAI, Gemini API, LLM Pipelines, Prompt Engineering, Multi-Model Routing</span>
            </div>
            <div>
              <span class="text-text-primary font-medium">Platforms & Tools:</span>
              <span class="text-text-secondary">VirusTotal, OpenCTI, Confluence, Jira, Trend Vision One, Linux, Git</span>
            </div>
          </div>
        </section>

        <!-- Selected Publications -->
        <section class="mb-6">
          <h2 class="resume-section-title">Selected Publications</h2>
          <ul class="space-y-1 text-sm">
            <li class="text-text-secondary">
              <span class="text-text-primary font-medium">"EDRSilencer: Weaponizing EDR Silence"</span> — Analysis of red team tool repurposed by ransomware operators to disable endpoint detection
            </li>
            <li class="text-text-secondary">
              <span class="text-text-primary font-medium">"CrazyHunter: BYOVD-Driven Ransomware"</span> — Research on ransomware family leveraging vulnerable drivers for defense evasion
            </li>
            <li class="text-text-secondary">
              <span class="text-text-primary font-medium">"Play Ransomware: Linux/ESXi Expansion"</span> — First documented cross-platform variant targeting enterprise virtualization infrastructure
            </li>
            <li class="text-text-secondary">
              <span class="text-text-primary font-medium">"Agenda Ransomware: NetXLoader & SmokeLoader"</span> — Investigation of multi-stage loader chains in targeted ransomware campaigns
            </li>
            <li class="text-text-secondary italic">
              + 13 additional published articles and 14 X/Twitter research threads — see <a href="https://jacobsantos.pages.dev/#research" class="text-accent-primary hover:underline">portfolio</a>
            </li>
          </ul>
        </section>

        <!-- Tools Built -->
        <section class="mb-6">
          <h2 class="resume-section-title">Tools & Projects</h2>
          <ul class="space-y-1 text-sm">
            <li class="text-text-secondary">
              <span class="text-text-primary font-medium">TITAs</span> — 9-phase AI-powered threat inquiry automation pipeline (Python) with OSINT, IOC enrichment, and automated response generation
            </li>
            <li class="text-text-secondary">
              <span class="text-text-primary font-medium">Skadi</span> — Streamlit-based threat intelligence platform with AI analysis, WRS lookups, and Confluence integration
            </li>
            <li class="text-text-secondary">
              <span class="text-text-primary font-medium">MCP Servers (3)</span> — Model Context Protocol servers for OpenCTI, Obsidian vault, and AI image generation (Node.js/TypeScript)
            </li>
            <li class="text-text-secondary">
              <span class="text-text-primary font-medium">Claude Code Desktop</span> — Desktop GUI wrapping Claude CLI with multi-model routing (70+ models), pipeline system, and dual WebSocket architecture (Express/Node.js)
            </li>
            <li class="text-text-secondary">
              <span class="text-text-primary font-medium">Confluence Tools Suite</span> — 13+ tools including RAG report generator, AI chatbot, PPT analyzer, and BEC analysis tools
            </li>
          </ul>
        </section>

        <!-- Speaking & Training -->
        <section class="mb-6">
          <h2 class="resume-section-title">Speaking & Training</h2>
          <ul class="space-y-1 text-sm text-text-secondary">
            <li><span class="text-text-primary font-medium">INTERPOL</span> — Recurring trainer for cybercrime programs: Operation Synergia (Ransomware), Advanced Threat Defense APAC (2024)</li>
            <li><span class="text-text-primary font-medium">International ATD Programs</span> — Led training in Japan (2x), Oman (1x), Philippines for government agencies and enterprises (2024-2025)</li>
            <li><span class="text-text-primary font-medium">Conference Speaker</span> — DECODE 2024/2025, DOST ICT Summit, CIRQIT, PUP Quezon (2024-2025)</li>
            <li><span class="text-text-primary font-medium">Enterprise Keynote & Training</span> — Philippine Airlines (keynote), Chinabank, BDO, SM (2025)</li>
            <li><span class="text-text-primary font-medium">Government Programs</span> — DICT Threat Hunting Workshop, USAID BEACON/CPIT Bootcamp (2024-2025)</li>
          </ul>
        </section>

        <!-- Print button -->
        <div class="flex items-center gap-3 pt-4 border-t border-white/[0.06]">
          <button onclick="window.print()" class="inline-flex items-center gap-2 px-5 py-2.5 rounded-xl bg-accent-primary text-bg-primary font-semibold text-sm transition-all hover:shadow-[0_0_30px_-5px_rgba(0,223,162,0.4)] hover:scale-[1.02]">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6.72 13.829c-.24.03-.48.062-.72.096m.72-.096a42.415 42.415 0 0110.56 0m-10.56 0L6.34 18m10.94-4.171c.24.03.48.062.72.096m-.72-.096L17.66 18m0 0l.229 2.523a1.125 1.125 0 01-1.12 1.227H7.231c-.662 0-1.18-.568-1.12-1.227L6.34 18m11.318 0h1.091A2.25 2.25 0 0021 15.75V9.456c0-1.081-.768-2.015-1.837-2.175a48.055 48.055 0 00-1.913-.247M6.34 18H5.25A2.25 2.25 0 013 15.75V9.456c0-1.081.768-2.015 1.837-2.175a48.041 48.041 0 011.913-.247m10.5 0a48.536 48.536 0 00-10.5 0m10.5 0V3.375c0-.621-.504-1.125-1.125-1.125h-8.25c-.621 0-1.125.504-1.125 1.125v3.659M18.75 3.75H5.25" />
            </svg>
            Print / Save as PDF
          </button>
          <a href="/" class="inline-flex items-center gap-2 px-4 py-2.5 rounded-xl bg-bg-surface border border-white/[0.06] text-text-muted text-sm font-medium hover:text-text-primary hover:border-white/10 transition-all">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
            </svg>
            Back to Portfolio
          </a>
        </div>
      </div>
    </div>
  </noscript>

  <style>
    /* Resume-specific styles for the noscript fallback */
    .resume-section-title {
      font-size: 0.875rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      color: var(--accent-primary, #00dfa2);
      border-bottom: 1px solid rgba(255,255,255,0.06);
      padding-bottom: 0.375rem;
      margin-bottom: 0.75rem;
      font-family: 'JetBrains Mono', monospace;
    }

    .resume-bullets li {
      position: relative;
      padding-left: 1rem;
      color: #8b949e;
      font-size: 0.8125rem;
      line-height: 1.6;
    }

    .resume-bullets li::before {
      content: '';
      position: absolute;
      left: 0;
      top: 0.55rem;
      width: 4px;
      height: 4px;
      border-radius: 50%;
      background: #00dfa2;
      opacity: 0.5;
    }

    /* Print-specific overrides */
    @media print {
      .resume-page {
        max-width: 100% !important;
        padding: 0 !important;
        margin: 0 !important;
        color: #1a1a1a !important;
      }

      body {
        background: white !important;
        background-image: none !important;
      }

      h1, h2, h3, h4 { color: #1a1a1a !important; }

      .resume-section-title {
        color: #1a1a1a !important;
        border-bottom-color: #ccc !important;
      }

      .resume-bullets li { color: #333 !important; }
      .resume-bullets li::before { background: #333 !important; }

      a { color: #333 !important; text-decoration: none !important; }

      * {
        -webkit-print-color-adjust: exact !important;
        print-color-adjust: exact !important;
      }

      @page {
        margin: 1cm;
        size: A4;
      }
    }
  </style>
</AppShell>

---
import AppShell from '../../design-system/components/AppShell.astro';
import { getCollection } from 'astro:content';

const allTools = await getCollection('tools');
const tools = allTools
  .sort((a, b) => (a.data.order ?? 99) - (b.data.order ?? 99));

const [featured, ...rest] = tools;

const statusConfig: Record<string, { color: string; dot: string }> = {
  'Production': { color: 'text-accent-primary', dot: 'bg-accent-primary' },
  'Active Dev': { color: 'text-accent-warning', dot: 'bg-accent-warning' },
  'Planned': { color: 'text-text-muted', dot: 'bg-text-muted' },
};

const toolAccents = [
  { bg: 'bg-accent-primary/10', border: 'border-accent-primary/20', text: 'text-accent-primary', gradient: 'from-accent-primary/20 to-accent-primary/5' },
  { bg: 'bg-violet-500/10', border: 'border-violet-500/20', text: 'text-violet-400', gradient: 'from-violet-500/20 to-violet-500/5' },
  { bg: 'bg-rose-500/10', border: 'border-rose-500/20', text: 'text-rose-400', gradient: 'from-rose-500/20 to-rose-500/5' },
  { bg: 'bg-cyan-500/10', border: 'border-cyan-500/20', text: 'text-cyan-400', gradient: 'from-cyan-500/20 to-cyan-500/5' },
  { bg: 'bg-amber-500/10', border: 'border-amber-500/20', text: 'text-amber-400', gradient: 'from-amber-500/20 to-amber-500/5' },
  { bg: 'bg-emerald-500/10', border: 'border-emerald-500/20', text: 'text-emerald-400', gradient: 'from-emerald-500/20 to-emerald-500/5' },
];

const toolIcons: Record<string, string> = {
  'Threat Inquiry Pipeline': `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3.75 12h16.5m-16.5 3.75h16.5M3.75 19.5h16.5M5.625 4.5h12.75a1.875 1.875 0 010 3.75H5.625a1.875 1.875 0 010-3.75z"/></svg>`,
  'Threat Intelligence Platform': `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09z"/></svg>`,
  'Infrastructure Hunting Toolkit': `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 013 12c0-1.605.42-3.113 1.157-4.418"/></svg>`,
  'Security Automation Suite': `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11.42 15.17l-5.63 3.29a.75.75 0 01-1.1-.66V5.65a.75.75 0 011.1-.66l5.63 3.29m0 0l5.63-3.29a.75.75 0 011.1.66v12.15a.75.75 0 01-1.1.66l-5.63-3.29m0 0V3.75m0 11.42V20.25"/></svg>`,
  'CTI Platform Connector': `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7.5 21L3 16.5m0 0L7.5 12M3 16.5h13.5m0-13.5L21 7.5m0 0L16.5 12M21 7.5H7.5"/></svg>`,
};

const defaultIcon = `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11.42 15.17l-5.63 3.29a.75.75 0 01-1.1-.66V5.65a.75.75 0 011.1-.66l5.63 3.29"/></svg>`;

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "Tools & Automation",
  "description": "Production security tools and automation built by Jacob Santos for real security operations.",
  "url": "https://jacobsantos.pages.dev/tools",
  "author": {
    "@type": "Person",
    "name": "Jacob Santos",
    "jobTitle": "Senior Threat Researcher"
  },
  "numberOfItems": tools.length,
};

const featuredData = featured.data;
const featuredAccent = toolAccents[0];
const featuredStatus = statusConfig[featuredData.status] || statusConfig['Planned'];
---

<AppShell
  title="Tools & Automation"
  description="Production security tools and automation built by Jacob Santos for real security operations."
  jsonLd={jsonLd}
  breadcrumbs={[
    { label: 'Home', href: '/' },
    { label: 'Tools' },
  ]}
>
  <div class="content-card mb-6">
    <h1 class="section-title">Tools & Automation</h1>
    <p class="section-subtitle">
      Production tools built for real threat hunting operations
      <span class="text-text-muted">-- not side projects, operational infrastructure.</span>
    </p>

    <!-- Featured tool: full width -->
    <a href={`/tools/${featured.id}`} class="block group mb-3">
      <div class={`relative rounded-xl overflow-hidden bg-gradient-to-br ${featuredAccent.gradient} border border-white/[0.06] transition-all duration-300 hover:border-accent-primary/15`} style="box-shadow: 0 0 30px -10px rgba(0, 223, 162, 0.05);">
        <div class="absolute inset-0 opacity-[0.03]" style="background-image: linear-gradient(rgba(255,255,255,0.5) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,0.5) 1px, transparent 1px); background-size: 32px 32px;"></div>
        <div class="relative p-5 sm:p-6">
          <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-4">
            <div class="flex-1 min-w-0">
              <div class="flex items-center gap-2.5 mb-3">
                <div class={`w-10 h-10 rounded-xl ${featuredAccent.bg} border ${featuredAccent.border} flex items-center justify-center ${featuredAccent.text} shrink-0 transition-transform duration-300 group-hover:scale-110`} set:html={toolIcons[featuredData.name] || defaultIcon} />
                <div>
                  <h2 class="text-text-primary font-semibold text-[15px] group-hover:text-accent-primary transition-colors leading-tight">{featuredData.name}</h2>
                  <p class="text-text-muted text-[10px] font-mono">{featuredData.fullName}</p>
                </div>
              </div>
              <p class="text-text-muted text-xs leading-relaxed mb-3 max-w-2xl">{featuredData.description}</p>
              <div class="flex items-start gap-1.5 mb-3 px-3 py-2 rounded-lg bg-accent-primary/[0.06] border border-accent-primary/[0.08] max-w-2xl">
                <svg class="w-3.5 h-3.5 text-accent-primary shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                </svg>
                <span class="text-text-secondary text-[11px] leading-relaxed">{featuredData.impact}</span>
              </div>
              <div class="flex flex-wrap gap-1">
                {featuredData.tech.map(t => (
                  <span class="tag-cyan !text-[9px]">{t}</span>
                ))}
              </div>
            </div>
            <div class="flex items-center gap-2 sm:flex-col sm:items-end sm:gap-1.5 shrink-0">
              {featuredData.badge && (
                <span class="inline-flex items-center px-2 py-0.5 rounded-md bg-violet-500/10 border border-violet-500/15 text-[8px] font-mono font-medium text-violet-400 uppercase tracking-wider whitespace-nowrap">
                  {featuredData.badge}
                </span>
              )}
              <span class={`inline-flex items-center gap-1.5 text-[10px] font-mono ${featuredStatus.color}`}>
                <span class={`w-1.5 h-1.5 rounded-full ${featuredStatus.dot}`}></span>
                {featuredData.status}
              </span>
            </div>
          </div>
        </div>
      </div>
    </a>

    <!-- Remaining tools: 2x2 grid -->
    <div class="grid sm:grid-cols-2 gap-3">
      {rest.map((entry, idx) => {
        const tool = entry.data;
        const accent = toolAccents[(idx + 1) % toolAccents.length];
        const status = statusConfig[tool.status] || statusConfig['Planned'];
        return (
          <a href={`/tools/${entry.id}`} class="card !p-4 group block flex flex-col">
            <div class="flex items-start justify-between mb-2">
              <div class="flex items-center gap-2.5 min-w-0">
                <div class={`w-9 h-9 rounded-xl ${accent.bg} border ${accent.border} flex items-center justify-center ${accent.text} shrink-0 transition-transform duration-300 group-hover:scale-110`} set:html={toolIcons[tool.name] || defaultIcon} />
                <div class="min-w-0">
                  <h2 class="text-text-primary font-semibold text-sm group-hover:text-accent-primary transition-colors leading-tight">{tool.name}</h2>
                  <p class="text-text-muted text-[10px] font-mono truncate">{tool.fullName}</p>
                </div>
              </div>
            </div>

            <div class="flex items-center gap-2 mb-2">
              {tool.badge && (
                <span class="inline-flex items-center px-1.5 py-0.5 rounded-md bg-violet-500/10 border border-violet-500/15 text-[8px] font-mono font-medium text-violet-400 uppercase tracking-wider">
                  {tool.badge}
                </span>
              )}
              <span class={`inline-flex items-center gap-1.5 text-[10px] font-mono ${status.color}`}>
                <span class={`w-1.5 h-1.5 rounded-full ${status.dot}`}></span>
                {status.color === 'text-accent-primary' ? 'Prod' : tool.status}
              </span>
            </div>

            <p class="text-text-muted text-xs leading-relaxed mb-3 flex-1">{tool.description}</p>

            <div class="flex items-start gap-1.5 mb-3 px-2.5 py-1.5 rounded-lg bg-accent-primary/[0.04] border border-accent-primary/[0.06]">
              <svg class="w-3 h-3 text-accent-primary shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
              </svg>
              <span class="text-text-secondary text-[10px] leading-relaxed">{tool.impact}</span>
            </div>

            <div class="flex flex-wrap gap-1 mt-auto">
              {tool.tech.map(t => (
                <span class="tag-cyan !text-[8px]">{t}</span>
              ))}
            </div>
          </a>
        );
      })}
    </div>

    <!-- Tech Stack -->
    <div class="mt-6 rounded-xl bg-bg-secondary/50 border border-white/[0.06] p-5 mb-4">
      <div class="flex items-center gap-2 mb-3">
        <svg class="w-4 h-4 text-accent-tertiary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6.429 9.75L2.25 12l4.179 2.25m0-4.5l5.571 3 5.571-3m-11.142 0L2.25 7.5 12 2.25l9.75 5.25-4.179 2.25m0 0L12 12.75 6.429 9.75m11.142 0l4.179 2.25L12 17.25 2.25 12l4.179-2.25" />
        </svg>
        <span class="text-text-primary text-xs font-semibold">Tech Stack</span>
      </div>
      <div class="flex flex-wrap gap-1.5">
        {['Python', 'Claude AI', 'Azure OpenAI', 'FastMCP', 'Streamlit', 'Shodan API', 'Censys API', 'Passive DNS', 'VirusTotal API', 'OpenCTI', 'pycti', 'Confluence API', 'RAG', 'OSINT'].map(tech => (
          <span class="inline-flex items-center px-2 py-0.5 rounded-md bg-white/[0.04] border border-white/[0.06] text-[9px] font-mono text-text-secondary">{tech}</span>
        ))}
      </div>
    </div>

    <!-- Operational summary -->
    <div class="rounded-xl bg-bg-secondary/50 border border-white/[0.06] p-4">
      <div class="flex items-center gap-2 mb-2">
        <div class="w-5 h-5 rounded-md bg-accent-primary/10 border border-accent-primary/20 flex items-center justify-center">
          <svg class="w-3 h-3 text-accent-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
        </div>
        <span class="text-text-primary text-xs font-semibold">Built for the team, used every day</span>
      </div>
      <p class="text-text-muted text-xs leading-relaxed">
        Every tool here was born from a real threat hunting workflow pain point -- from inquiry triage and infrastructure hunting to threat intelligence analysis and report generation.
      </p>
    </div>
  </div>
</AppShell>
